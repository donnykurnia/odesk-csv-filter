<div class="container-fluid">
  <ul class="breadcrumb">
    <li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
    <li></li>
    <li class="active">Products</li>
  </ul>

  <div class="page-header">
    <h1>Listing products</h1>
    <%= link_to 'New Product', new_product_path, class: "btn" %>
    <%= link_to 'Import from CSV', import_csv_products_path, class: "btn btn-primary" %>
  </div>

  <div class="row-fluid">
    <div class="span8">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Kind</th>
            <th>Height</th>
            <th>Emergency exit</th>
            <th>Openable</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @products %>
        </tbody>
      </table>
      <%= paginate @products, :theme => 'twitter-bootstrap' %>
    </div>
    <div class="span4">
      <p>Search</p>
      <%= simple_nested_form_for(Search.new, html: { class: 'form-inline search-form' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input_field :pre_condition, collection: ["NOT"], include_blank: true, class: 'pre_condition' %>
          <%= f.input_field :field, collection: ["Kind", "Height", "Emergency Exit", "Openable"], prompt: 'Choose Field', class: 'field' %>
          <%= f.input_field :comparison, collection: ["<", ">", "=", "!="], include_blank: false, class: 'comparison' %>
          <%= f.input_field :value, class: 'value', placeholder: 'value' %>
        </div>
        <div class="form-inputs" id="another_fields">
          <%= f.simple_fields_for :connections %>
        </div>
        <p><%= f.link_to_add "Add another condition", :connections, data: { target: "#another_fields" } %></p>
        <div class="form-inputs">
          <%= f.input_field :sort_by, collection: ["Kind", "Height", "Emergency Exit", "Openable"], prompt: "Sort By" %>
          <%= f.input_field :sort_direction, collection: ["Ascending", "Descending"], prompt: "direction" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Search Product" %>
        </div>
      <% end %>

    </div>
  </div>
  <br>
</div>
