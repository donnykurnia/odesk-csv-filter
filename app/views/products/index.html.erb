<div class="container-fluid">
  <ul class="breadcrumb">
    <li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
    <li></li>
    <li class="active">Products</li>
  </ul>

  <div class="page-header">
    <h1>Listing products</h1>
    <%= link_to 'New Product', new_product_path, class: "btn" %>
    <%= link_to 'Import from CSV', import_csv_products_path, class: "btn btn-primary" %>
  </div>

  <div class="row-fluid">
    <div class="span8">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Kind</th>
            <th>Height</th>
            <th>Emergency exit</th>
            <th>Openable</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @products %>
        </tbody>
      </table>
      <%= paginate @products, :theme => 'twitter-bootstrap' %>
    </div>
    <div class="span4">
      <p>Search form here</p>
    </div>
  </div>
  <br>
</div>
