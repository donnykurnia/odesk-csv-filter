<div class="container-fluid">
  <ul class="breadcrumb">
    <li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
    <li></li>
    <li class="active">Review CSV Import</li>
  </ul>

  <div class="page-header">
    <h1>Review CSV Import</h1>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <%= form_tag bulk_insert_products_path do %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Kind</th>
              <th>Height</th>
              <th>Emergency exit</th>
              <th>Openable</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'review_products', collection: @csv_upload.products, as: :product %>
          </tbody>
        </table>
        <%= submit_tag "Insert all" %>
        <%= link_to "Cancel", products_path, class: 'btn' %>
      <% end %>
    </div>
  </div>
  <br>
</div>
