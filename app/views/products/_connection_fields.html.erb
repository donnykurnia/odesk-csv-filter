<%= f.input_field :connector, collection: ["AND", "OR"], include_blank: false, class: 'connector' %><br/>
<%= f.input_field :pre_condition, collection: ["NOT"], include_blank: true, class: 'pre_condition' %>
<%= f.input_field :field, collection: Product.fields_option, prompt: 'Choose Field', class: 'field' %>
<%= f.input_field :comparison, collection: Product.comparison_arrays, include_blank: false, class: 'comparison' %>
<%= f.input_field :value, class: 'value', placeholder: 'value' %>
<%= f.link_to_remove '<i class="icon-remove"></i>'.html_safe %>
